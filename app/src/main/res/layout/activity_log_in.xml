<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_100"
    tools:context=".LogIn">

    <LinearLayout
        android:id="@+id/linearLayout_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView_LogIn_logo"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:contentDescription="@string/logoDescription"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/logocompleto" />

        <EditText
            android:id="@+id/editText_LogIn_Email"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:autofillHints=""
            android:backgroundTint="@color/white_50"
            android:ems="10"
            android:fontFamily="@font/source_code_pro_medium"
            android:hint="@string/username_email"
            android:inputType="textPersonName|textEmailAddress"
            android:textColor="@color/white"
            android:textColorHint="@color/white_50"
            android:textColorLink="@color/white"
            android:textCursorDrawable="@color/white"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editText_LogIn_Password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white_50"
            android:ems="10"
            android:fontFamily="@font/source_code_pro_medium"
            android:hint="@string/password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white_50"
            android:textColorLink="@color/white"
            android:textCursorDrawable="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_LogIn_SignIn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/source_code_pro_black"
            android:text="@string/startsession"
            android:textColor="@color/purple_100"
            app:cornerRadius="0dp" />

        <TextView
            android:id="@+id/textView_Login_ForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:ems="10"
            android:fontFamily="@font/source_code_pro_bold"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Contrasenya oblidada?"
            android:textColor="@color/white_50"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button_Login_CreateUser"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/source_code_pro_black"
            android:text="@string/create_user"
            android:textColor="@color/purple_100"
            app:cornerRadius="0dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>