<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_100"
    tools:context=".LogIn">

    <LinearLayout
        android:id="@+id/linearLayout_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="3dp">

        <ImageView
            android:id="@+id/imageView_login_logo"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/logocompleto" />

        <Button
            android:id="@+id/button_Login_CreateUser"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/source_code_pro_black"
            android:text="Crear Usuari"
            android:textColor="@color/purple_100"
            app:cornerRadius="0dp" />

        <EditText
            android:id="@+id/editText_Login_UserName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:ems="10"
            android:fontFamily="@font/source_code_pro_medium"
            android:inputType="textPersonName"
            android:text="Nom d'usuari"
            android:textColor="@color/white_50"
            android:textColorLink="@color/white"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:ems="10"
            android:fontFamily="@font/source_code_pro_medium"
            android:hint="Contrasenya"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white_50"
            android:textColorLink="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_Login_StartSession"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/source_code_pro_black"
            android:text="Iniciar sessio"
            android:textColor="@color/purple_100"
            app:cornerRadius="0dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>