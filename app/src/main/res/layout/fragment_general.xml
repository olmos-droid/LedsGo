<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_100"
    tools:context=".GeneralFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_general_patertn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_80"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Pattern 1"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/button_general_patertn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_80"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Pattern 2"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/button_general_patertn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_80"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Pattern 3"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/button_general_patertn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_80"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Pattern 4"
                app:cornerRadius="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_general_patertn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_80"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:text="Pattern 5"
                app:cornerRadius="0dp"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/vbutton_general_patertn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_80"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:text="Pattern 6"
                app:cornerRadius="0dp"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/vbutton_general_patertn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_80"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:text="Pattern 7"
                app:cornerRadius="0dp"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/vbutton_general_patertn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_80"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:text="Pattern 8"
                app:cornerRadius="0dp"
                app:iconPadding="0dp" />
        </LinearLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton_general_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color"
                android:textColor="@color/white_50" />

            <RadioButton
                android:id="@+id/radioButton_show_general_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blanc"
                android:textColor="@color/white_50" />

            <RadioButton
                android:id="@+id/radioButton_show_general_gradient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gradual"
                android:textColor="@color/white_50" />

            <RadioButton
                android:id="@+id/radioButton_show_general_lineal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lineal"
                android:textColor="@color/white_50" />
        </RadioGroup>

        <com.rtugeek.android.colorseekbar.ColorSeekBar
            android:id="@+id/colorSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barHeight="10dp"
            app:thumbHeight="@android:dimen/notification_large_icon_height"
            app:showAlphaBar="true"
            app:colorSeeds="@array/material_colors" />


        <TextView
            android:id="@+id/textView_show_general_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_code_pro_bold"
            android:gravity="center"
            android:text="Speed"
            android:textColor="@color/white_50"
            android:textColorHighlight="#FFFFFF" />

        <SeekBar
            android:id="@+id/seekBar_show_general_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</FrameLayout>